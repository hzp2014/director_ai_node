# =============================================
# AI Storyboard Pro - Environment Configuration
# Node.js Platform Version
# =============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# =============================================
# Image Generation Backend
# =============================================
# Options: api, comfyui, mock
#   api     - Use NanaBanana Pro API (requires API key)
#   comfyui - Use local ComfyUI (requires ComfyUI running)
#   mock    - Testing mode (no real generation)
IMAGE_BACKEND=comfyui

# =============================================
# API Configuration (for IMAGE_BACKEND=api)
# =============================================
# Your API key for the image generation service
NANA_BANANA_API_KEY=your_api_key_here
NANA_BANANA_BASE_URL=https://api.nanabanana.pro

# =============================================
# Server Configuration
# =============================================
# Express API server port
API_PORT=8000
API_HOST=0.0.0.0

# Gradio UI server port (if using)
GRADIO_PORT=7861
GRADIO_HOST=0.0.0.0

# =============================================
# CORS Configuration
# =============================================
# Comma-separated list of allowed origins
# Use * for development, restrict in production
CORS_ORIGINS=*

# =============================================
# File Upload Configuration
# =============================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.docx,.doc,.md,.markdown,.html,.htm,.txt,.jpg,.jpeg,.png

# =============================================
# Optional: ComfyUI Integration (Local Image Generation)
# =============================================
# Set to true to enable ComfyUI integration
COMFYUI_ENABLED=true

# ComfyUI server address
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188

# Directory containing custom workflow JSON files (optional)
# Can be absolute path or relative to project root
# COMFYUI_WORKFLOW_DIR=workflows

# =============================================
# Optional: Ollama Integration
# =============================================
# OLLAMA_HOST=localhost
# OLLAMA_PORT=11434

# =============================================
# AI Chat and Video Generation Configuration
# =============================================

# Zhipu GLM API Configuration (for text generation and dialogue)
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_API_BASE_URL=https://open.bigmodel.cn/api/paas/v4
DEFAULT_CHAT_MODEL=glm-4.7

# Doubao ARK API Configuration (for image analysis)
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_API_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_IMAGE_MODEL=doubao-vision-pro-32k

# Video Generation API Configuration (Tuzi/Sora)
VIDEO_API_KEY=your_video_api_key_here
VIDEO_API_BASE_URL=https://api.tuzi.ai/v1
VIDEO_MODEL=veo3.1-components
VIDEO_SIZE=1280x720
VIDEO_SECONDS=5

# Concurrency Configuration
CONCURRENT_SCENES=3

# Mock Mode (Testing Only)
USE_MOCK_VIDEO_API=true
USE_MOCK_CHAT_API=true

# FFmpeg Configuration (for video merging)
FFMPEG_PATH=/usr/local/bin/ffmpeg
MERGED_VIDEOS_DIR=./outputs/merged_videos

# Character Reference Configuration
CHARACTER_REFERENCE_COUNT=3

# =============================================
# Debug/Development
# =============================================
# Set to true for verbose logging
DEBUG=false
